<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.CFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ln_1"
        android:background="#65cf9c"
        android:padding="70dp"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:text="Payment Succesful"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.42"
                android:id="@+id/textView6" />

            <TextView
                android:textSize="40sp"
                android:text="40,00$"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="0.25" />

            <TextView
                android:text="RECENPIDENT"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.43"/>
            <TextView
                android:textSize="20sp"
                android:text="Lester Nygarrd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.64"/>

            <TextView
                android:text="NOTE"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:id="@+id/textView8" />

            <TextView
                android:textSize="18sp"
                android:text="It was a homorously perilous business for both of us"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/im_ok"
                android:scaleType="fitStart"
                android:src="@drawable/check3"
                android:background="#65cf9c"
                android:layout_width="52dp"
                android:layout_height="50dp"
                android:layout_weight="0.18" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
